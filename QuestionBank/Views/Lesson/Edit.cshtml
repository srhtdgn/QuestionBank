@model QuestionBank.Models.Lesson
@{
    ViewBag.Page = "Dersler";
    ViewBag.Title = "Ders Yönetimi";
    ViewBag.Description = "Ders Düzenleme ekranı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Düzenle</h2>

<div class="row">
    <div class="col-md-6">

        <div class="btn-group">
            <button class="btn btn-circle green" onclick="location.href='@Url.RouteUrl("Lessons")'">
                <i class="fa fa-arrow-left"></i>
                Ders Listesi
            </button>
        </div>
    </div>
</div>
<br />
@Html.Raw(@ViewBag.Message)
@using (Html.BeginForm("Edit", "Lesson", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.LessonName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LessonName, new { htmlAttributes = new { @class = "form-control input-circle" } })
                @Html.ValidationMessageFor(model => model.LessonName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ders Güncelle" class="btn btn-circle green" />
            </div>
        </div>
    </div>
}
