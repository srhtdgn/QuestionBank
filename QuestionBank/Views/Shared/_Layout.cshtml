                    <!-- DOC: Set data-keep-expand="true" to keep the submenues expanded -->
                    <!-- DOC: Set data-auto-speed="200" to adjust the sub menu slide up/down speed -->
                    <ul class="page-sidebar-menu  page-header-fixed " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200" style="padding-top: 20px">
                        <!-- DOC: To remove the sidebar toggler from the sidebar you just need to completely remove the below "sidebar-toggler-wrapper" LI element -->
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                        <li class="sidebar-toggler-wrapper hide">
                            <div class="sidebar-toggler">
                                <span></span>
                            </div>
                        </li>
                        <!-- END SIDEBAR TOGGLER BUTTON -->
                        <!-- DOC: To remove the search box from the sidebar you just need to completely remove the below "sidebar-search-wrapper" LI element -->

                        <li class="nav-item start  @SelectedTabClass("Home") @SelectedTabClass("Topics") @SelectedTabClass("Questions") @SelectedTabClass("Exam")">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="icon-home"></i>
                                <span class="title">Menu</span>
                                <span class="selected"></span>
                                <span class="arrow open"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item start @SelectedTabClass("Topic")">
                                    <a href="@Url.RouteUrl("Topics")" class="nav-link ">
                                        <i class="icon-bar-chart"></i>
                                        <span class="title">Konu Yönetimi</span> 
                                        <span class="selected"></span>
                                    </a>
                                </li>
                                <li class="nav-item start @SelectedTabClass("Questions")">
                                    <a href="@Url.RouteUrl("Questions")" class="nav-link ">
                                        <i class="icon-bulb"></i>
                                        <span class="title">Soru Yönetimi</span>
                                        <span class="badge badge-success"></span>
                                    </a>
                                </li>
                                <li class="nav-item start @SelectedTabClass("Exam")">
                                    <a href="@Url.RouteUrl("ExamPrepare")" class="nav-link ">
                                        <i class="icon-graph"></i>
                                        <span class="title">Sınav Yönetimi</span>
                                        <span class="badge badge-danger"></span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="heading">
                                <h3 class="uppercase">Admin</h3>
                            </li>
                            <li class="nav-item  @SelectedTabClass("Lesson") @SelectedTabClass("Users")">
                                <a href="javascript:;" class="nav-link nav-toggle">
                                    <i class="icon-diamond"></i>
                                    <span class="title">Yönetim</span>
                                    <span class="arrow"></span>
                                </a>
                                <ul class="sub-menu">
                                    <li class="nav-item  @SelectedTabClass("Users")">
                                        <a href="@Url.RouteUrl("Users")" class="nav-link ">
                                            <i class="icon-users"></i>
                                            <span class="title">Kullanicilar</span>
                                        </a>
                                    </li>
                                    <li class="nav-item  @SelectedTabClass("Lesson")">
                                        <a href="@Url.RouteUrl("Lessons")" class="nav-link ">
                                            <i class="icon-book-open"></i>
                                            <span class="title">Dersler</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

