<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">
    <div class="page-wrapper">
        <!-- BEGIN HEADER -->
        <div class="page-header navbar navbar-fixed-top">
            <!-- BEGIN HEADER INNER -->
            <div class="page-header-inner ">
                <!-- BEGIN LOGO -->
                <div class="page-logo">
                    <a href="@Url.RouteUrl("Home")">
                        <img src="/Content/assets/layouts/layout/img/logo.png" alt="{ O O P }" class="logo-default" />
                    </a>
                    <div class="menu-toggler sidebar-toggler">
                        <span></span>
                    </div>
                </div>
                <!-- END LOGO -->
                <!-- BEGIN RESPONSIVE MENU TOGGLER -->
                <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span></span>
                </a>
                <!-- END RESPONSIVE MENU TOGGLER -->
                <!-- BEGIN TOP NAVIGATION MENU -->
                <div class="top-menu">
                    <ul class="nav navbar-nav pull-right">

                        <!-- BEGIN USER LOGIN DROPDOWN -->
                        <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
                        @{

                            using (QuestionBank.Models.QuestionBankDbContext db = new QuestionBank.Models.QuestionBankDbContext())
                            {
                                QuestionBank.Models.User _kullanici = new QuestionBank.Models.User();
                                /* SoruBankasi.Models.Kullanici*/
                                _kullanici = db.User.SingleOrDefault(x => x.UserName.Equals(User.Identity.Name));

                                <li class="dropdown dropdown-user">
                                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                        <img alt="@_kullanici.UserName" class="img-circle" src="~/Uploads/Profile/@_kullanici.Photo" />
                                        <span class="username username-hide-on-mobile"> @_kullanici.Name @_kullanici.SurName </span>
                                        <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-default">
                                        <li>
                                            <a href="@Url.RouteUrl("ProfileDetail")">
                                                <i class="icon-user"></i> Profilim
                                            </a>
                                        </li>
                                        <li class="divider"> </li>
                                        <li>
                                            <a href="@Url.RouteUrl("Logout")">
                                                <i class="icon-logout"></i> Log Out
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                            }
                        }

                        <!-- END USER LOGIN DROPDOWN -->
                    </ul>
                </div>
                <!-- END TOP NAVIGATION MENU -->
            </div>
            <!-- END HEADER INNER -->
        </div>
        <!-- END HEADER -->
        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>
        <!-- END HEADER & CONTENT DIVIDER -->
