@model IEnumerable<QuestionBank.Models.Topic>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Konu Listesi
                </div>
                <div class="tools"> </div>
            </div>
            <div class="portlet-body">
                <table aling="Center" class="table table-striped table-bordered table-advance table-hover list" id="list">
                    <thead>
                        <tr>
                            <th>Konu Adı</th>
                            <th>Konu Dönemleri</th>
                            <th>İşlemler</th>

                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr id="tr_@item.ID">
                                <td>@item.TopicName</td>
                                <td>
                                    @foreach (var period in item.TopicQuestionPeriod)
                                    {
                                        <span class="btn dark btn-outline btn-circle btn-sm">@(period.QuestionPeriod.QuestionPeriodName) </span>

                                    }

                                </td>

                                <td>
                                    @Html.RouteLink("Düzenle", "EditTopic", new { id = item.ID }, new { @class = "btn btn-outline btn-circle dark btn-sm purple fa fa-edit" }) |
                                    <a href="#" class="btn btn-outline btn-circle dark btn-sm red" onclick="DeleteTopic(@item.ID)">Sil</a>
                                </td>
                            </tr>
                        }



                    </tbody>


                </table>
            </div>
        </div>
    </div>
</div>


@section styles{

    <link href="/Content/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}


