@model QuestionBank.Models.ViewModel.QuestionEditViewModel
@{
    ViewBag.Page = "Sorular";
    ViewBag.Title = "Soru Yönetimi";
    ViewBag.Description = "Soru Güncelleme ekranı";
}

<h2>Soru Güncelleme</h2>
<div class="row">
    <div class="col-md-6">
        <div class="btn-group">
            <button class="btn btn-circle green" onclick="location.href='@Url.RouteUrl("Questions")'">
                <i class="fa fa-arrow-left"></i>
                Soru Listesi
            </button>
        </div>
    </div>
</div>

<br />
<div id="message"></div>

<div class="portlet-body form">
    @using (Html.BeginForm("Edit", "Question", FormMethod.Post))
    {
        <div class="form-horizontal">

            <div class="form-group">
                <label class="col-md-2 control-label">Dersin Adı</label>
                <div class="col-md-10">
                   @*// @Html.DropDownListFor(x => x.question.Topic.LessonID, new SelectList(Model.Lessons, "ID", "LessonName"), new { @class = "form-control ", disabled = "disabled" })*@
                    @Html.TextBoxFor(x=>x.question.Topic.Lesson.LessonName, new { @class = "form-control ", @readonly="true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Konu</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.question.TopicID, new SelectList(Model.Topics, "ID", "TopicName"), new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Dönem</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.question.QuestionPeriodID, new SelectList(Model.Periods, "ID", "QuestionPeriodName"), new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Soru Tipi</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.question.QuestionTypeID, new SelectList(Model.Types, "ID", "QuestionTypeName"), new { @class = "form-control" })

                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Soru</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(x=>x.question.Question1, new { @class = "form-control" })
                    @*<textarea name="Soru" id="soru" class="form-control" rows="3">@Model.question.Question1</textarea>*@
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Cevaplar</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" name="cevap" checked>
                            <span></span>
                        </span>
                        <i class="fa fa-mic"></i>
                        <input type="text" value="" class="form-control  txtcevap">

                    </div>
                </div>
                <label class="col-md-offset-2  control-label btn" id="CevapEkle">Yeni Cevap Ekle</label>
            </div>

            @Html.HiddenFor(x => x.question.ID)

            <div class="form-group">
                <div class="col-md-offset-2  col-md-10">
                    <input type="submit" value="Güncelle" class="btn btn-circle green" />
                </div>
            </div>

        </div>
    }
</div>
@section styles{
    <link href="/Content/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
}

@section scripts {
    <script src="/Content/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="/Content/assets/pages/scripts/components-select2.min.js" type="text/javascript"></script>
    <script>
        var result;
        $(document).ready(function () {
            $('#Ders').prepend($('<option>', {
                value: 0,
                text: 'Ders Seçiniz'
            })).val("0");

            $('#Ders').on('change', function () {
                if (this.value != 0) {
                    var id = this.value;
                    $.ajax({
                        type: "POST",
                        url: "DersinKonulari",
                        data: { ID: id },
                        success: function (data) {
                            result = JSON.parse(data);
                            $('#Konu').empty().append('<option selected="selected" value="0">Konu Seçin</option>');
                            $.each(result, function (i, item) {
                                $('#Konu').append($('<option>', {
                                    value: item.TopicID,
                                    text: item.TopicName
                                }));
                            });
                            $('#Donem').empty().append('<option selected="selected" value="0">Dönem Seçin</option>');
                        }
                    });
                }
            });

            $('#Konu').on('change', function () {
                var i = $(this).prop('selectedIndex') - 1;
                $('#Donem').empty().append('<option selected="selected" value="0">Dönem Seçin</option>');
                $.each(result[i].Period, function (i, item) {
                    $('#Donem').append($('<option>', {
                        value: item.PeriodID,
                        text: item.PeriodName
                    }));
                });
            });




            var Cevapsayisi = 1;

            $('#CevapEkle').click(function () {
                if (Cevapsayisi < 5) {
                    Cevapsayisi++;
                    $(this).prev().after("<div class='col-md-offset-2 col-md-10 deneme' ><div class='input-group'><span class='input-group-addon'><input type='radio' name='cevap'><span></span></span><div class='input-icon right'><i class='fa fa-close  sil' style='color:black'></i><i class='fa fa-mic'></i><input type='text' class='form-control  txtcevap'></div></div></div>");
                    $('txtcevap').val() == Cevapsayisi;
                }
                else {
                    alert("5 den fazla cevap ekleyemezsiniz");
                }


            });

            $(document).on("click", ".sil", function () {

                $(this).parents('div').remove('.deneme');
                Cevapsayisi--;

            });


            $('.gonder').click(function () {

                var lst = [];
                $.each($('.txtcevap'), function () {
                    var obj = {
                        Val: $($($(this).prev()[0]).children()[0]).prop('checked'),
                        AnswerContent: $(this).val()
                    };
                    lst.push(obj);
                });

                var data = {
                    TopicID: $('#Konu').val(),
                    PeriodID: $('#Donem').val(),
                    QuestionTypeID: $('#SoruTipi').val(),
                    Question: $('#soru').val(),
                    Answers: lst
                };

                $.ajax({
                    type: "POST",
                    url: "SoruEkle2",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        if (data.durum == "OK") {
                            $("#message").append("<div class='alert alert-info'><strong></strong>" + data.mesaj + " </div>")
                        }
                        else if (data.durum = "NO") {
                            $("#message").append("<div class='alert alert-info'><strong></strong>" + data.mesaj + " </div>")
                        }
                    }
                });
            });
        });

    </script>
